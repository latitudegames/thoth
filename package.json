{
  "name": "@thoth/root",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "core"
    ]
  },
  "scripts": {
    "start": "lerna exec --scope @thoth/client -- yarn start",
    "lint": "lerna run lint --parallel",
